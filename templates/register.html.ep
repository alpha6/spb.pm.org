% layout 'default', title => 'Saint-Petersburg PM Group : Registration';
<h2>Register</h2>
<h3><font color="red"><%= $message %></font></h3>
<form action="/register" method=post>
  <dl>
    <dt>Username:
    <dd><input type=text name=login>
    <dt>Password:
    <dd><input type=password name=passwd>
    <dt>Email:
    <dd><input type=text name=email>
    <dd><input type=submit value=Register>
  </dl>
</form>
